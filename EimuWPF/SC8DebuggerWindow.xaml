<Window x:Class="Eimu.SC8DebuggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SCHIP Debugger" Height="338" Width="495" ResizeMode="NoResize">
    <Grid>
        <ListBox Height="272" HorizontalAlignment="Left" Name="m_Listbox_CodeView" VerticalAlignment="Top" Width="164" Margin="0,27,0,0" />
        <TabControl Height="272" HorizontalAlignment="Left" Margin="161,27,0,0" Name="tabControl1" VerticalAlignment="Top" Width="328">
            <TabItem Header="Regs" Name="tabItem1">
                <Grid>
                    <ListBox Height="228" HorizontalAlignment="Left" Margin="6,6,0,0" Name="listBox1" VerticalAlignment="Top" Width="127" />
                </Grid>
            </TabItem>
            <TabItem Header="Memory"/>
        </TabControl>
        <ToolBar Height="26" HorizontalAlignment="Left" Name="toolBar1" VerticalAlignment="Top" Width="489" >
        	<Button Content="Run"/>
        	<Button Content="Pause"/>
        	<Button Content="Stop"/>
        	<Separator/>
        	<Button Content="Step"/>
        	<Button Content="Skip"/>
        </ToolBar>
    </Grid>
</Window>
